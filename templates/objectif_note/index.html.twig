{% extends 'base.html.twig' %}

{% block title %}Liste des Notes d'Objectif
{% endblock %}

{% block body %}
	<h1>Liste des Notes d'Objectif</h1>

	<table>
		<thead>
			<tr>
				<th>Objectif</th>
				<th>Ã‰valuation</th>
				<th>Note</th>
				<th>Statut</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for objectifNote in objectif_notes %}
				<tr>
					<td>{{ objectifNote.objectif.titre }}</td>
					<td>{{ objectifNote.evaluation.id }}</td>
					<td>{{ objectifNote.note }}</td>
					<td>{{ objectifNote.statut }}</td>
					<td>
						<a href="{{ path('app_objectif_note_show', {'id': objectifNote.id}) }}">Voir</a>
						<a href="{{ path('app_objectif_note_edit', {'id': objectifNote.id}) }}">Modifier</a>
						<form action="{{ path('app_objectif_note_delete', {'id': objectifNote.id}) }}" method="post">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objectifNote.id) }}">
							<button type="submit">Supprimer</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_objectif_note_new') }}">Ajouter une note d'objectif</a>
{% endblock %}
