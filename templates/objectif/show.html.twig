{% extends 'base.html.twig' %}

{% block title %}Objectif{% endblock %}

{% block body %}
    <h1>Objectif</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ objectif.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ objectif.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ objectif.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ objectif.dateCreation ? objectif.dateCreation|date('Y-m-d') : '' }}</td>
                
            </tr>
            <tr>
                <th>Date d’échéance</th>
                <td>{{ objectif.dateEcheance ? objectif.dateEcheance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Poid</th>
                <td>{{ objectif.poid }}</td>
            </tr>
            <tr>
                <th>Manager</th>
                <td>{{ objectif.manager.firstname }}</td>
            </tr>
            <tr>
                <th>Employee</th>
                <td>{{ objectif.employee.firstname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_objectif_index') }}">back to list</a>
    <a href="{{ path('app_objectif_edit', {'id': objectif.id}) }}">edit</a>

    {{ include('objectif/_delete_form.html.twig') }}
{% endblock %}
